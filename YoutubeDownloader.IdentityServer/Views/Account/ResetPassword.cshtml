@using Microsoft.AspNetCore.Mvc.Localization
@model YoutubeDownloader.IdentityServer.Models.ResetPasswordViewModel

<div>
    <h1>Reset password</h1>
    <p>Enter new password</p>

    <form asp-action="ResetPassword" autocomplete="off">
        <input asp-for="Code" type="hidden" />
        <input asp-for="UserId" type="hidden"  />
        <div class="form-group">
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="Password" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
        </div>
        <div class="mt-4 mb-4">
            <button class="btn btn-primary">Reset</button>
        </div>
        <partial name="_ValidationSummary" />
    </form>
</div>
